<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmbeddedGalleryActivity">

    <es.goda87.embeddedgallery.EmbeddedGalleryView
        android:id="@+id/embedded_gallery_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="embedded_gallery_transition" />

    <ImageView
        android:id="@+id/embedded_gallery_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        tools:src="@android:drawable/ic_menu_close_clear_cancel"
        tools:visibility="visible" />
</FrameLayout>
